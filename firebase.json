{
  "hosting": {
    "public": "out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**/**",
        "function": "nextjs-server"
      }
    ],
    "functions": {
      "source": ".",
      "ignore": [
        ".firebase/**",
        ".firebaserc",
        "firebase.json",
        "**/node_modules/**",
        "**/public/**"
      ]
    }
  }
}
